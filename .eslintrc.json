{
  "root": true,
  "env": {
    "browser": true,
    "es2020": true
  },
  "globals": {
    "React": "readonly"
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "react-hooks"],
  "rules": {
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": ["**/*.test.{ts,tsx,js,jsx}"],
      "plugins": ["testing-library", "jest-dom"],
      "extends": [
        "plugin:testing-library/react",
        "plugin:jest-dom/recommended"
      ],
      "globals": {
        "describe": "readonly",
        "test": "readonly",
        "it": "readonly",
        "expect": "readonly",
        "beforeEach": "readonly",
        "afterEach": "readonly",
        "beforeAll": "readonly",
        "afterAll": "readonly",
        "vi": "readonly"
      },
      "env": {
        "node": true
      },
      "rules": {
        "no-undef": "off"
      }
    },
    {
      "files": [
        "**/*.{config,configs}.ts",
        "**/*.{config,configs}.js",
        "vitest.config.ts",
        "vite.config.*",
        "scripts/**/*.{ts,js}",
        "tools/**/*.{ts,js}"
      ],
      "env": {
        "node": true
      }
    },
    {
      "files": ["src/utils/**/*.ts"],
      "env": {
        "node": true
      }
    }
  ]
}
