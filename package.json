    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-testing-library": "^7.6.4",
    "eslint-plugin-vitest": "^0.5.4",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.32",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.3.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^5.0.8",
    "vitest": "^3.2.4"
